  private static function genDl($givenname, $surname, $class = null, $wrong = []) {
    $gd = $sd = $cd = null;
    if (!is_null($wrong)) {
      $gd = in_array("givenname", $wrong) ? ' text-danger' : '';
      $sd = in_array("surname", $wrong) ? ' text-danger' : '';
      $cd = in_array("class", $wrong) ? ' text-danger' : '';
    }
    $cltext = null;
    if (!is_null($class))
      $cltext = <<<EOL
      <dt class="col-xl-3$cd">Třída</dt>
      <dd class="col-xl-9$cd">$class</dd>
EOL;
    return <<<EOL
    <dl class="row">
      <dt class="col-xl-3$gd">Jméno</dt>
      <dd class="col-xl-9$gd">$givenname</dd>
      <dt class="col-xl-3$sd">Příjmení</dt>
      <dd class="col-xl-9$sd">$surname</dd>
$cltext
    </dl>
EOL;
  }

  private function card($user, $mode, $type = "student") {
    if ($mode == 'baka') {
      $givenname = @trim($user['JMENO']);
      $surname = @trim($user['PRIJMENI']);
      $class = $type == "student" ? trim(@$user['TRIDA']) : null;
      $code = @$user['INTERN_KOD'];
      $codesh = $code;
      $bakaText = $this::genDl($givenname, $surname, $class);
      $ldapText = <<<EOL
      <h6 class="text-danger">Nenalezeno</h6>
EOL;
      $actionText = "Vytvořit nového uživatele";
    } else if ($mode == 'ldap') {
      $givenname = @$user['givenname'][0];
      $surname = @$user['sn'][0];
      $class = $type == "student" ? substr_replace(@$user['department'][0], ".", 1, 0) : null;
      if (array_key_exists('bakaid', $user)) {
        $code = $user['bakaid'][0];
        $codesh = $code;
      } else {
        $code = base64_encode(explode(",", substr($user['dn'], 3))[0]);
        $codesh = substr(md5($code), 0, 5);
      }
      $ldapText = $this::genDl($givenname, $surname, $class);
      $bakaText = <<<EOL
      <h6 class="text-danger">Nenalezeno</h6>
EOL;
      if (substr($class, 0, 1) == "4") {
        $actionText = "Přesunout mezi absolventy";
      } else {
        $actionText = "Zakázat účet";
      }
    } else if ($mode == 'diff') {
      $wrong = [];
      if ($user['ldap']['givenname'][0] != trim($user['baka']['JMENO'])) {
        $givenname = trim($user['baka']['JMENO']) . "/" . $user['ldap']['givenname'][0];
        array_push($wrong, "givenname");
      } else {
        $givenname = $user['ldap']['givenname'][0];
      }
      
      if ($user['ldap']['sn'][0] != trim($user['baka']['PRIJMENI'])) {
        $surname = trim($user['baka']['PRIJMENI']) . "/" . $user['ldap']['sn'][0];
        array_push($wrong, "surname");
      } else {
        $surname = $user['ldap']['sn'][0];
      }
      
      if ($type == "student") {
        if (substr_replace($user['ldap']['department'][0], ".", 1, 0) != trim($user['baka']['TRIDA'])) {
          $class = trim($user['baka']['TRIDA']) . "/" . substr_replace($user['ldap']['department'][0], ".", 1, 0);
          array_push($wrong, "class");
        } else {
          $class = trim($user['baka']['TRIDA']);
        }
      } else {$class = null;}
      
      $code = $user['ldap']['bakaid'][0];

      $codesh = $code;
      $ldapText = $this::genDl(
        $user['ldap']['givenname'][0],
        $user['ldap']['sn'][0],
        array_key_exists('department', $user['ldap']) ? substr_replace($user['ldap']['department'][0], ".", 1, 0):null,
        $wrong
      );
      $bakaText = $this::genDl(
        trim($user['baka']['JMENO']),
        trim($user['baka']['PRIJMENI']),
        array_key_exists('TRIDA', $user['baka'])?trim($user['baka']['TRIDA']):null
      );
      
      $actionText = "Opravit informace";
    } else {
      return;
    }

    $classText = is_null($class) ? "" : " ($class)";

    return <<<EOL
    <div class="card">
    <div class="card-header" id="hd$codesh">
      <h6 class="mb-0">
        <div class="form-check">
          <input class="form-check-input position-static" type="checkbox" name="$code">
          <label class="form-check-label" style="cursor: pointer;" data-toggle="collapse" data-target="#col$codesh" aria-expanded="false" aria-controls="col$code">$givenname $surname$classText</label>
          <kbd class="float-right">$codesh</kbd>
        </div>
      </h6>
    </div>
    <div id="col$codesh" aria-labelledby="hd$codesh" class="collapse" data-parent="#acc$type">
      <div class="card-body">
        <div class="row">
          <div class="col-6">
            <div class="card border-light mb-3">
              <div class="card-header"><h5 class="my-0">Bakaláři</h5></div>
              <div class="card-body pb-0">
                $bakaText
              </div>
            </div>
          </div>
          <div class="col-6">
            <div class="card border-light mb-3">
