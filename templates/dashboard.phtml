  }

  static function numLang($word, $number) {
    $lang = [
      "student" => [
        0 => "studentů",
        1 => "student",
        2 => "studenti",
        3 => "studenti",
        4 => "studenti",
        5 => "studentů",
      ],
      "učitel" => [
        0 => "učitelů",
        1 => "učitel",
        2 => "učitelé",
        3 => "učitelé",
        4 => "učitelé",
        5 => "učitelů"
      ],
      "vyžaduje" => [
        0 => "nevyžaduje",
        1 => "vyžaduje",
        2 => "vyžadují",
        3 => "vyžadují",
        4 => "vyžadují",
        5 => "vyžaduje"
      ]
    ];

    if (!array_key_exists($word, $lang))
      return $word;
    if ($number >= count($lang[$word]))
      return end($lang[$word]);
    return $lang[$word][$number];
  }
  
  function newsAlert() {
    if ($this->countSTchange) {
